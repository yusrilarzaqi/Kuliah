<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LuasActivity">

    <TextView
        android:id="@+id/teksJudulLuas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/judulLuas"
        />

    <TextView
        android:id="@+id/textPanjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/teksJudulLuas"
        android:text="@string/textPanjang"
        android:layout_marginTop="10dp"
         />

    <EditText
        android:id="@+id/edPanjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPanjang"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textLebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/edPanjang"
        android:layout_marginTop="20dp"
        android:text="@string/textLebar"
        />

    <EditText
        android:id="@+id/edLebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLebar"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnHasilLuas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edLebar"
        android:layout_marginTop="10dp"
        android:text="Hitung Luas Persegi"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/hasilLuas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/btnHasilLuas"
        android:layout_marginTop="20dp"
        android:text="" />


</RelativeLayout>