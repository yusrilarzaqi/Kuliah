<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KelilingActivity">

  <TextView
      android:id="@+id/teksJudulKeliling"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:textSize="24sp"
      android:textStyle="bold"
      android:text="@string/judulKeliling"
      />

  <TextView
      android:id="@+id/textPanjang"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_below="@id/teksJudulKeliling"
      android:text="@string/textPanjang"
      android:layout_marginTop="10dp"
      />

  <EditText
      android:id="@+id/edPanjang"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/textPanjang"
      android:layout_marginTop="10dp"
      android:ems="10"
      android:inputType="number" />

  <TextView
      android:id="@+id/textLebar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_below="@id/edPanjang"
      android:layout_marginTop="20dp"
      android:text="@string/textLebar"
      />

  <EditText
      android:id="@+id/edLebar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/textLebar"
      android:layout_marginTop="10dp"
      android:ems="10"
      android:inputType="number" />

  <Button
      android:id="@+id/btnHasilKeliling"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/edLebar"
      android:layout_marginTop="10dp"
      android:text="Hitung Luas Keliling"
      tools:ignore="HardcodedText" />

  <TextView
      android:id="@+id/hasilKeliling"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_below="@id/btnHasilKeliling"
      android:layout_marginTop="20dp"
      android:text="" />

</RelativeLayout>